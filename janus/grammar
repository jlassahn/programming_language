
FILE:
	HEADER
	HEADER FILE_CONTENT

HEADER:
	janus VERSION ;
	janus VERSION { HEADER_OPTIONS }

FILE_CONTENT:
	FILE_DECLARATION
	FILE_DECLARATION FILE_CONTENT

FILE_DECLARATION:
	IMPORT
	DEF
	STRUCT
	INTERFACE

IMPORT:
	import IMPORT_NAME;
	import IMPORT_NAME as IMPORT_NAME;
	# FIXME "bare" imports?

DEF:
	def TOKEN TYPE VALUE
	def TOKEN VALUE
	def TOKEN TYPE ;

STRUCT:
	struct TOKEN STRUCT_BODY
	struct TOKEN;
	m_struct TOKEN STRUCT_BODY
	m_struct TOKEN;

INTERFACE:
	interface TOKEN INTERFACE_BODY
	interface TOKEN EXTENDS_LIST INTERFACE_BODY

VALUE:
	= EXPRESSION ;
	= CONSTANT_BLOCK
	FUNCTION_BODY


TYPE:
	TOKEN
	TOKEN ( TYPE_LIST )
	m_array(TYPE, INTEGER_CONSTANT)
	m_slice(TYPE)
	m_ref(TYPE)
	array(TYPE)
	ref(TYPE)
	( TYPE_LIST ) -> TYPE

